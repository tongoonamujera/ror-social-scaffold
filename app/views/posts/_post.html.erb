<li class="post mb-5">
  <p class="post-content">
    <%= post.content %>
  </p>

  <div class='post-comments-section'>
    <%= render partial: 'comments/comment', collection: post.comments %>
    <div class="form">
      <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
        <%= form.text_field :content, id: :comment_content, class: 'input', placeholder: 'Add new Comment' %>
        <div class="has-text-right">
          <%= form.submit 'Comment', class: 'button is-success mt-1' %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class='post-liking'>
      <span class='post-date'> <%= post.created_at.strftime("%Y/%m/%d") %> </span>
      <%= like_or_dislike_btn(post) %>
    </div>
  </div>
</li>
